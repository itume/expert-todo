<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th></th>
      <th>やること</th>
      <th>説明</th>
      <th>期限日</th>
    </tr>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= '完了' if todo.done? %></td>
        <td><%= todo.title%></td>
        <td><%= todo.description%></td>
        <td><%= todo.expire_at%></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'done', todo_finish_path(todo), method: :post, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
